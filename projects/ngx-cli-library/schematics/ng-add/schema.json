{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsSetupI18n",
  "title": "Setup I18n",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false,
      "$default": {
        "$source": "workingDirectory"
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "i18n": {
      "type": "boolean",
      "description": "A flag to indicate seting up the internationalisation",
      "x-prompt": "Would you like to include internationalisation (i18n)?"
    }
  }
}
